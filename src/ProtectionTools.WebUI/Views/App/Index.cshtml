@model ProtectionTools.WebUI.ViewModels.BusViewModel

@{
    ViewBag.Title = "Расчет тока потребления на шине";
}

<div ng-controller="AppController">
    <form asp-controller="App" asp-action="Index" method="post" ng-submit="calc()">
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PowerCoef"></label>
            <div>
                <input ng-model="model.PowerCoef" class="text-danger"/>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NominalVoltage"></label>
            <div>
                <input ng-model="model.NominalVoltage" class="text-danger"/>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Elements"></label>
            <div>
                <span asp-validation-for="Elements" class="text-danger"></span>
            </div>

            <table>
                <thead>
                <tr>
                    <th>Active power</th>
                    <th>Count</th>
                    <th>Using coefficient</th>
                    <th>Cos</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="element in model.Elements">
                    <td>
                        <input type="text" ng-model="element.ActivePower"/>
                    </td>
                    <td>
                        <input type="text" ng-model="element.Count"/>
                    </td>
                    <td>
                        <input type="text" ng-model="element.UsingCoefficient"/>
                    </td>
                    <td>
                        <input type="text" ng-model="element.Cos"/>
                    </td>
                </tr>
                </tbody>
            </table>
            <input type="button" value="Добавить" id="addElement" class="btn btn-default" ng-click="addElement()"/>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Рассчитать" class="btn btn-default"/>
            </div>
        </div>

    </form>

    <div class="form-group" ng-show="model.amperage > 0">
        <label asp-for="Amperage"></label>
        <div>
            <div>{{ Model.Amperage}}</div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/app.js"></script>
    <script src="~/js/electricityService.js"></script>
    <script src="~/js/appController.js"></script>
}
